#!/bin/sh

#THIS SCRIPT REQUIRES tesseract, tesseract-data-ell

PDF="$1"

#while getopts h:l: flag
#do
#    case "${flag}" in
#        h) echo -e "NO HELP!" ;;
#        l) LANG=${OPTARG} && echo "Language: $LANG";;
#    esac
#done

mkdir -p temp/images temp/output

convert             \
	-verbose        \
	-density 300    \
 	$PDF  \
 	-quality 100    \
	temp/images/input-%02d.png

for file in temp/images/*; do
	echo  $file
	filename=$(basename -- "$file")
	filename="${filename%.*}"
	echo $filename
	tesseract $file temp/output/$filename -l ell
done

 	#-flatten        \
	#-sharpen 0x1.0  \

#!/bin/bash

choices="laptop\ndual\nexternal"

if xrandr | grep "HDMI1 connected"; then

	chosen=$(echo -e $choices | dmenu -i)

	case "$chosen" in
		external) ~/.screenlayout/onlyexternal.sh ;;
		laptop) ~/.screenlayout/onlylaptop.sh ;; 
		dual) ~/.screenlayout/dualmonitors.sh ;; 
	esac
else
	~/.screenlayout/onlylaptop.sh
fi

startup

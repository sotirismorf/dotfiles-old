#!/bin/bash

VOLUME=$(pamixer --get-volume)

ICON=""
ICON_INDEX=$(($VOLUME/30))

case $(pamixer --get-mute) in
	true) ICON="ﱝ"  ;;
	false) 
		case $ICON_INDEX in
			0) ICON="奄" ;;
			1) ICON="奔" ;;
			2) ICON="墳" ;;
			*) echo $ICON_INDEX;;
		esac ;;
	*) echo default
	;;
esac

printf " %s%% %s" "$VOLUME" "$ICON"; 
